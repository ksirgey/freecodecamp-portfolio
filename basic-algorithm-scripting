//Convert Celsius to Fahrenheit

function convertToF(celsius) {
  let fahrenheit = celsius*(9/5)+32;
  return fahrenheit;
}
convertToF(30);


//Reverse a String

function reverseString(str) {
  str = str.split('').reverse().join('');
  return str;
}
reverseString("hello");


//Factorialize a Number

function factorialize(num) {
  let product = 1;
  for(let i = 1; i <= num; i++) {
    product *= i;
  }
  return product;
}
factorialize(5);


//Find the Longest Word in a String

function findLongestWordLength(str) {
  let arr = str.split(' ');
  let container = [];
  console.log(container);
  for (let i = 0; i < arr.length; i++) {
    container.push(arr[i].length);
  }
  let descending = container.sort(function(a,b) {return b-a});
  return descending[0];
}

findLongestWordLength("The quick brown fox jumped over the lazy dog");


//Return Largest Numbers in Arrays

function largestOfFour(arr) {
  // You can do this!

  let newArr = [];
  for (let i = 0; i < arr.length; i++) {
    let holding = arr[i].sort(function(a,b) {
      return b-a;
    })
    newArr.push(holding[0]);
  }
  return newArr;
}
largestOfFour([[4, 5, 1, 3], [13, 27, 18, 26], [32, 35, 37, 39], [1000, 1001, 857, 1]]);


//Confirm the Ending

function confirmEnding(str, target) {
  // "Never give up and good luck will find you."
  // -- Falcor

  if (str.substring(str.length-target.length) == target) {
    return true;
  } return false;
 
}
confirmEnding("Bastian", "n");


//Repeat a String Repeat a String

function repeatStringNumTimes(str, num) {
  // repeat after me
  let newStr = '';
  let i = num;
  while (i > 0) {
    newStr = newStr.concat(str);
    i--;
  }
  return newStr;
}
repeatStringNumTimes("abc", 3);


//Truncate a String

function truncateString(str, num) {
  // Clear out that junk in your trunk
  if (str.length > num) {
    let shortened = str.substring(0,num);
    return shortened + '...';
  }
  return str;
}
truncateString("A-tisket a-tasket A green and yellow basket", 8);


//Finders Keepers

function findElement(arr, func) {
  for (let i = 0; i < arr.length; i++) {
    let num = arr[i];
    if (func(num)) {
      return num;
    }
  }
  return undefined;
}
findElement([1, 2, 3, 4], num => num % 2 === 0);


//Boo who

function booWho(bool) {
  // What is the new fad diet for ghost developers? The Boolean.
  if (typeof bool == "boolean") {
    return true;
  } return false;
}
booWho(null);


//Title Case a Sentence

function titleCase(str) {
  let arr = str.toLowerCase().split(' ');
  let newArr = [];

  for(let i = 0; i < arr.length; i++) {
    let upperCase = arr[i].charAt(0).toUpperCase() + arr[i].substring(1);
    newArr.push(upperCase);
  }
  return newArr.join(' ');
}
titleCase("I'm a little tea pot");


//Slice and Splice

function frankenSplice(arr1, arr2, n) {
  // It's alive. It's alive!
  let newArr1 = arr1.slice(0);
  let newArr2 = arr2.slice(0);
  for (let i = 0; i < newArr1.length; i++) {
    newArr2.splice(n, 0, newArr1[i]);
    n++
  }
  return newArr2;
}
frankenSplice([1, 2, 3], [4, 5, 6], 1);


//Where Do I Belong?

function getIndexToIns(arr, num) {
  // Find my place in this sorted array.
  let sorted = arr.sort(function(a,b) {
    return a - b;
  })

  for (let i = 0; i < sorted.length; i++) {
    if (sorted[i] >= num) {
      return i;
    }
  }
  return sorted.length;
}
getIndexToIns([40, 60], 50);
